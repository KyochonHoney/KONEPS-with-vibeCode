[mysqld]
# 기본 설정
port = 3307
basedir = C:/Users/tideflo/Desktop/나라장터/db/mysql-8.0.35-winx64
datadir = C:/Users/tideflo/Desktop/나라장터/db/mysql-data
tmpdir = C:/Users/tideflo/Desktop/나라장터/db/mysql-data
lc-messages-dir = C:/Users/tideflo/Desktop/나라장터/db/mysql-8.0.35-winx64/share

# 문자셋 설정
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci

# 로그 설정
log_error = C:/Users/tideflo/Desktop/나라장터/db/mysql-logs/mysql-error.log
general_log_file = C:/Users/tideflo/Desktop/나라장터/db/mysql-logs/mysql-general.log
slow_query_log_file = C:/Users/tideflo/Desktop/나라장터/db/mysql-logs/mysql-slow.log

# 보안 설정
skip_name_resolve = 1
local_infile = 0

# 성능 설정
max_connections = 100
innodb_buffer_pool_size = 128M
innodb_log_file_size = 48M
innodb_flush_log_at_trx_commit = 2
innodb_file_per_table = 1

# SQL 모드
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

[client]
port = 3307
default_character_set = utf8mb4